<%= link_to "New anime", new_anime_path , class:"mt-2 btn btn-primary"%>

<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">List Of All Anime</h1>
      <div id="animes">
        <% @animes.each do |anime| %>
          <%= render anime %>
        <% end %>
      </div>
    </div>
  </div>
</div>