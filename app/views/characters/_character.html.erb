<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @anime.characters.each do |character| %>
    <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
      <div class="card m-2" style="width: 250px;">
        <% if character.image.attached? %>
          <%= link_to anime_character_path(@anime, character) do %>
            <div class="text-center">
              <%= image_tag(character.image, style:"width:100px;") %>
            </div>
          <% end %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= character.name %></h5>
          <!-- Добавим кнопку "Редактировать" -->
          <%= link_to "Редактировать", edit_anime_character_path(@anime, character), class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
